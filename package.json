{
  "name": "wsuwp-hrs-help",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/washingtonstateuniversity/wsuwp-hrs-help"
  },
  "author": "washingtonstateuniversity",
  "contributors": [
    {
      "name": "Adam Turner"
    }
  ],
  "license": "GPL-2.0+",
  "browserslist": [
    "> 1%",
    "ie 8-11",
    "Firefox ESR"
  ],
  "devDependencies": {
    "autoprefixer": "^8.6.5",
    "cpx": "^1.5.x",
    "cssnano": "^4.0.x",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.9.1",
    "postcss-cli": "^5.0.1",
    "rimraf": "^2.6.x",
    "stylelint": "^9.3.0"
  },
  "scripts": {
    "clean": "rimraf {css/,images/,js/}",
    "phpcs": "vendor/bin/phpcs -v --colors --extensions=php --ignore=\"*/vendor/*,*/node_modules/*\" --standard=phpcs.ruleset.xml *.php includes/ templates/",
    "lintscss": "stylelint \"src/scss/**/*.scss\"",
    "sass": "node-sass --output-style expanded src/scss -o css/",
    "postsass": "postcss css/*.css --map --use autoprefixer --use cssnano --replace",
    "build:css": "npm run lintscss -s && npm run sass -s",
    "test": "npm run phpcs -s && npm run lintscss -s",
    "prebuild": "npm run clean && npm run phpcs",
    "build": "npm run build:css"
  }
}
