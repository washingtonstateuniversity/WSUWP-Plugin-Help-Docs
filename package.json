{
  "name": "wsuwp-help-docs",
  "version": "0.6.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/washingtonstateuniversity/wsuwp-plugin-help-docs"
  },
  "author": "washingtonstateuniversity",
  "contributors": [
    {
      "name": "Adam Turner"
    }
  ],
  "license": "GPL-2.0+",
  "browserslist": [
    "> 1%",
    "ie 8-11",
    "Firefox ESR"
  ],
  "devDependencies": {
    "autoprefixer": "^9.1.x",
    "cpx": "^1.5.x",
    "cssnano": "^4.1.4",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.9.1",
    "postcss-cli": "^6.0.x",
    "rimraf": "^2.6.x",
    "stylelint": "^9.6.x"
  },
  "scripts": {
    "clean": "rimraf {css/}",
    "phpcs": "vendor/bin/phpcs -v --colors --extensions=php --ignore=\"*/vendor/*,*/node_modules/*\" --standard=phpcs.ruleset.xml *.php includes/ templates/",
    "lintscss": "stylelint \"src/scss/**/*.scss\"",
    "sass": "node-sass --output-style expanded src/scss -o css/",
    "postsass": "postcss css/*.css --map --use autoprefixer --use cssnano --replace",
    "build:css": "npm run lintscss -s && npm run sass -s",
    "test": "npm run phpcs -s && npm run lintscss -s",
    "prebuild": "npm run clean -s && npm run phpcs -s",
    "build": "npm run build:css -s"
  }
}
